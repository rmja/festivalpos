{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2018",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "lib": ["ES2018", "DOM", "WebWorker"]
  },
  "exclude": ["bin", "node_modules"]
}
